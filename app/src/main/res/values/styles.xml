<resources>

    <!-- Base application theme. -->
    <style name="LightTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorAccent">@color/colorGreen</item>
        <item name="colorButtonNormal">@color/colorGreen</item>
        <item name="colorAccentL">@color/colorGreen</item>

    </style>

    <style name="DarkTheme" parent="ThemeOverlay.MaterialComponents.Dark">
        <item name="colorAccent">@color/colorBlue</item>
        <item name="colorButtonNormal">@color/colorBlue</item>
        <item name="colorAccentL">@color/colorBlue</item>
    </style>

    <style name="LightTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DarkTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="aboutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/sp16</item>
    </style>

    <style name="settingsRadioGroup">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left</item>
        <item name="android:paddingTop">@dimen/sp10</item>
        <item name="android:paddingLeft">@dimen/sp10</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="mainParams">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:checked">true</item>
        <item name="android:paddingTop">@dimen/sp10</item>
        <item name="android:paddingLeft">@dimen/sp10</item>
        <item name="android:textSize">@dimen/sp16</item>
    </style>

    <style name="settingsRadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="infoCities">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingStart">@dimen/sp10</item>
        <item name="android:textSize">@dimen/sp30</item>
    </style>

    <style name="infoCities.infoCitiesD">
        <item name="android:textSize">@dimen/sp18</item>
    </style>

    <style name="infoWeatherParameter">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/sp10</item>
        <item name="android:textSize">@dimen/sp20</item>
    </style>

    <style name="infoWeatherValue">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/sp20</item>
    </style>

    <style name="infoWeatherParams">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="mainTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/sp08</item>
        <item name="android:textSize">@dimen/sp30</item>
    </style>

    <style name="buttonStyle">
        <item name="android:textAlignment">center</item>
    </style>

    <style name="buttonStyle.D">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp16</item>
    </style>

    <style name="buttonStyle.D.D2">
        <item name="android:textSize">@dimen/sp18</item>
        <item name="android:padding">@dimen/sp08</item>
    </style>

    <style name="frameButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/sp02</item>
        <item name="android:paddingLeft">@dimen/sp10</item>
        <item name="android:paddingRight">@dimen/sp10</item>
    </style>

    <style name="cardRecyclerStyle">
        <item name="android:padding">@dimen/sp08</item>
        <item name="android:textSize">@dimen/sp18</item>
    </style>

    <style name="AppBarLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/sp150</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="CollapsingToolBarLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="ToolbarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
    </style>

</resources>
