<resources>

    <!-- Base application theme. -->
    <style name="LightTheme" parent="Theme.AppCompat.Light" />

    <style name="DarkTheme" parent="Theme.AppCompat" />

    <style name="aboutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/sp16</item>
    </style>

    <style name="settingsRadioGroup">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left</item>
        <item name="android:paddingTop">@dimen/sp10</item>
        <item name="android:paddingLeft">@dimen/sp10</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="mainParams">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:checked">true</item>
        <item name="android:paddingTop">@dimen/sp10</item>
        <item name="android:paddingLeft">@dimen/sp10</item>
    </style>

    <style name="settingsRadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="infoCities">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left</item>
        <item name="android:paddingStart">@dimen/sp10</item>
        <item name="android:textSize">@dimen/sp30</item>
    </style>

    <style name="infoWeatherParameter">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/sp10</item>
        <item name="android:textSize">@dimen/sp20</item>
    </style>

    <style name="infoWeatherValue">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/holo_green_dark</item>
        <item name="android:textSize">@dimen/sp20</item>
    </style>

    <style name="infoWeatherParams">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="mainTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/sp08</item>
        <item name="android:textSize">@dimen/sp30</item>
    </style>

    <style name="buttonStyle">
        <item name="android:textAlignment">center</item>
        <item name="android:background">@color/colorBlue</item>
    </style>

    <style name="buttonStyle.D">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp16</item>
    </style>

    <style name="buttonStyle.D.D2">
        <item name="android:background">@color/colorGreen</item>
    </style>

    <style name="frameButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/sp02</item>
        <item name="android:paddingLeft">@dimen/sp10</item>
        <item name="android:paddingRight">@dimen/sp10</item>
    </style>

</resources>
